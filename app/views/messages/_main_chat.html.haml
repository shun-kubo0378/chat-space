.chat-main
  .main-header
    .main-header__group
      .main-header__group-name
        = @group.name
      %ul.main-header__member-list 
        Member : 
        %li
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group), class: "main-header__edit-btn" do
      Edit

  .message
    = render @messages
    .message__box
      .message__box__info
        .message__box__info__user-name
          masa
        .message__box__info__date
          2019/11/20(Wed) 17:43:34
      .message__box__content
        %p
          こんにちは
    .message__box
      .message__box__info
        .message__box__info__user-name
          masa
        .message__box__info__date
          2019/11/20(Wed) 17:54:45
      .message__box__content
        %p.message__box__content-message
          おはよう

  .form
    = form_with model: [@group, @message], html: {class: "new_message"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'