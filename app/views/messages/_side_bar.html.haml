.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__username
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__edit-user
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit', class: 'edit-user__btn')
        %li.side-header__box__new-group 
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', )
            
  .groups-list
    - current_user.groups.each do |group|
      .groups-list__box
        = link_to edit_group_path(current_user) do
          %p.groups-list__box__group-name
            = group.name
          %p.groups-list__box__group-message
            まだメッセージがありません
    

